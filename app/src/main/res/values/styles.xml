<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar" >
    </style>




    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="AppDefaultSpinner" parent="android:style/Widget.Spinner">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

	<style name="Theme.Transparent" parent="android:Theme">
	    <item name="android:windowIsTranslucent">true</item>
	    <item name="android:windowBackground">@android:color/transparent</item>
	    <item name="android:windowContentOverlay">@null</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:windowIsFloating">true</item>
	    <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="HomeScreenButton"> 
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">10dp</item> 
        <item name="android:background">@drawable/button_dark_red</item>       
    </style>
    
    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="formContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:minWidth">320dip</item>
        <item name="android:maxWidth">450dip</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
    
    
    <style name="scrollViewStyle" />
    <style name="datePickerStyle" />
    <style name="numberPickerStyle" />
    
    <style name="formRowFrame">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:maxWidth">@dimen/form_row_frame_max_width</item>
        <item name="android:background">@drawable/row_frame</item>
    </style>
    
    <style name="inline_add_button">
        <item name="android:src">@drawable/blue_add_button_small</item>
        <item name="android:background">@drawable/backgroundstate</item>
        <item name="android:layout_width">45dip</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:contentDescription">Add</item>
    </style>
    
    
    <style name="inline_spinner" parent="android:style/Widget.Spinner">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:textSize">15sp</item>  
        <item name="android:layout_alignParentTop">true</item>
    </style>
     
    <style name="inline_relative_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="popup_window">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:visibility">gone</item>
		<item name="android:background">@drawable/message_dialog</item>
		<item name="android:paddingTop">50dp</item>
    </style>
    
    <style name="formButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_marginTop">16dp</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:textSize">18sp</item>
		<item name="android:maxWidth">@dimen/button_max_width</item>
    </style>
    
    <style name="footerButton">
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <!-- <item name="android:padding">40dp</item> -->
        <item name="android:textSize">15sp</item>
  	</style>
  	
  	<style name="footerButtonText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
  	</style>
  	
    <style name="message_dialog">
        <item name="android:background">@drawable/message_dialog</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <!--    Tables -->
    <style name="table_row_header">
        <item name="android:background">@drawable/gradient_dark_red</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dip</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:textColor">#0F7F0F</item>
        <item name="android:shadowColor">#AFFFFFFF</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>
    
    <style name="table_cell_header">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="table_row_odd">
        <item name="android:paddingLeft">3dip</item>
        <item name="android:background">@color/table_row_odd</item>
    </style>
    
    <style name="table_row_even">
        <item name="android:background">@color/table_row_even</item>
    </style>
    
    <style name="table_cell_sessions">
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>
	<style name="table_view_header_cell">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="table_view_row_cell">
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="table_textview">
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="black_button_style" parent="@style/formButton">
        <item name="android:background">@drawable/button_black</item>
        <item name="android:textColor">@color/white</item>
	    <item name="android:maxWidth">@dimen/button_max_width</item>
    </style>

    <style name="dark_red_button_style" parent="@style/formButton">
        <item name="android:background">@drawable/button_dark_red2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxWidth">@dimen/button_max_width</item>
    </style>

    <style name="reports_page_button" parent="@style/dark_red_button_style">
    </style>

    <style name="bullet">
        <item name="android:textColor">@color/black</item>
	    <item name="android:layout_marginTop">10dp</item>
	    <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="appBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="mainPageTotalsTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>



</resources>

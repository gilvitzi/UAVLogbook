<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    
    <style name="formContainer">
        <item name="android:layout_width">450dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:minWidth">320dip</item>
        <item name="android:maxWidth">450dip</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    
    <style name="formRowFrame">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_width">450dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:maxWidth">@dimen/form_row_frame_max_width</item>
        <item name="android:background">@drawable/row_frame</item>
    </style>

    <style name="inline_relative_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="popup_window">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:visibility">gone</item>
		<item name="android:background">@drawable/message_dialog</item>
		<item name="android:paddingTop">50dp</item>
    </style>
    
    <style name="formButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_marginTop">16dp</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:textSize">18sp</item>
		<item name="android:maxWidth">@dimen/button_max_width</item>
    </style>
    
    <style name="footerButton">
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">15sp</item>
  	</style>
  	
  	<style name="footerButtonText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
  	</style>

 
</resources>

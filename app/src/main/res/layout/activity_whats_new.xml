<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="15dp"
    android:orientation="vertical"
    tools:context="com.gilvitzi.uavlogbookpro.activity.ActivityWhatsNew" >

	<LinearLayout
    	android:id="@+id/page1"
		android:orientation="vertical"
        android:layout_width="match_parent"
   		android:layout_height="match_parent"
		android:padding="20dp"
   		android:visibility="visible">

		<TextView
			android:id="@+id/textView2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/title_new_in_version_2_2"
			android:textColor="#0FABFF"
			android:textSize="22sp" />

		<TextView
			android:id="@+id/blt1"
			style="@style/bullet"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="10dp"
			android:text="@string/feature_decimal_hours_format" />

		<TextView
			android:id="@+id/blt2"
			style="@style/bullet"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="10dp"
			android:text="@string/feature_some_bug_fixes" />


    </LinearLayout>
	<Button
	    android:id="@+id/whats_new_skip_button"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
	    android:background="@drawable/button_dark_red"
        android:textColor="@color/white"
	    android:text="@string/whats_new_skip_button"
	    android:onClick="goToNext"
        android:layout_marginLeft="18dp"
        />
</RelativeLayout>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="15dp"
    android:orientation="vertical"
    tools:context="com.gilvitzi.uavlogbookpro.activity.ActivityWhatsNew" >
    <!--
         The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc.
    -->

    
	<RelativeLayout 
    	android:id="@+id/page1"
        android:layout_width="match_parent"
   		android:layout_height="match_parent"
   		android:visibility="invisible">

   		
	    <TextView
	        android:id="@+id/google_drive_feature_description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/google_drive_feature_title"
	        android:layout_below="@+id/google_drive_feature_title"
	        android:layout_marginTop="23dp"
	        android:text="@string/description_sync_with_google_drive"
	        android:textColor="#000" />
	
	
	
		<LinearLayout
		    android:id="@+id/bullets_container"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/google_drive_feature_description"
		    android:layout_below="@+id/google_drive_feature_description"
		    android:orientation="vertical" >
	
		    <TextView
		        android:id="@+id/google_drive_sync_bullet_1"
		        style="@style/bullet"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/sync_with_google_drive_bullet1" />
	
		    <TextView
		        android:id="@+id/google_drive_sync_bullet_2"
		        style="@style/bullet"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/sync_with_google_drive_bullet2" />
	
		    <TextView
		        android:id="@+id/google_drive_sync_bullet_3"
		        style="@style/bullet"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/sync_with_google_drive_bullet3" />
	
		    <TextView
		        android:id="@+id/google_drive_sync_bullet_4"
		        style="@style/bullet"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/sync_with_google_drive_bullet4" />
		</LinearLayout>
	
		<TextView
		    android:id="@+id/google_drive_feature_title"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="61dp"
		    android:text="@string/title_sync_with_google_drive"
		    android:textColor="#0FABFF"
		    android:textSize="22sp" />
	
		<ImageView
		    android:id="@+id/google_drive_feature_image"
		    android:layout_width="170dp"
		    android:layout_height="170dp"
		    android:layout_alignParentBottom="true"
		    android:layout_alignParentRight="true"
		    android:layout_marginBottom="70dp"
		    android:layout_marginRight="71dp"
		    android:contentDescription="@string/google_drive_sync_feature_image_desc"
		    android:src="@drawable/google_drive_sync_feature_image" />
	
	</RelativeLayout>
	
	<RelativeLayout 
    	android:id="@+id/page2"
        android:layout_width="match_parent"
   		android:layout_height="match_parent"
   		android:visibility="visible">
		
		<TextView
		    android:id="@+id/quick_start_feature_title"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="35dp"
		    android:text="@string/title_quick_start_button_feature"
		    android:textColor="#0FABFF"
		    android:textSize="22sp" />
	 	
		<ImageView
		    android:id="@+id/quick_start_feature_image"
		    android:layout_width="170dp"
		    android:layout_height="170dp"
		    android:layout_alignParentBottom="true"
		    android:layout_alignParentRight="true"
		    android:layout_marginBottom="70dp"
		    android:layout_marginRight="71dp"
		    android:contentDescription="@string/quick_start_feature_image_desc"
		    android:src="@drawable/quick_start_button_feature_image" />

		<TextView
		    android:id="@+id/quick_start_feature_description"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/quick_start_feature_title"
		    android:layout_marginLeft="24dp"
		    android:layout_marginTop="26dp"
		    android:textSize="18sp"
		    android:text="@string/quick_start_feature_desc"
		    android:textColor="#000" />

	</RelativeLayout>	    
	<Button
	    android:id="@+id/whats_new_skip_button"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:layout_margin="18dp"
	    android:layout_marginBottom="0dp"
	    android:background="@drawable/button_dark_red"
        android:textColor="@color/white"
	    android:text="@string/whats_new_next_button"
	    android:onClick="goToNext" />
</RelativeLayout>



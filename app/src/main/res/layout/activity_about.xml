<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.gilvitzi.uavlogbookpro.activity.ActivityAbout"
    tools:ignore="MergeRootFrame" >
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:keepScreenOn="true"
        android:adjustViewBounds="true"
        android:src="@drawable/splash_screen_logo_cropped"
        android:contentDescription="@string/app_logo_image_desc"
        android:layout_marginTop="30dp"
        android:textStyle="bold" />
    
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="@string/app_splash_screen_title" />
    
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="@string/app_version" />
    
    
  	<Button
	    android:id="@+id/btn_skip"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="45dp"
	    android:layout_marginBottom="0dp"
	    android:background="@drawable/button_dark_red"
	    android:textColor="@color/white"
	    android:text="@string/whats_new"
	    android:onClick="goToWhatsNew" />
  	
</LinearLayout>

